
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
</head>
<body>

    <h2>Login</h2>


    @using (Html.BeginForm())
    {
        <table>
            <tr>
                <td>
                    @Html.Label("User ID ")
                </td>
                <td>
                    @Html.TextBox("userid")
                </td>
            </tr>
            <tr>
                <td>
                    @Html.Label("Password ")
                </td>
                <td>
                    @Html.TextBox("password")
                </td>
            </tr>
        </table>
        <input type="submit" value="Login" id="postlogin" />
    }

</body>
</html>
